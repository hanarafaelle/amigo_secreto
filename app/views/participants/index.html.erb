<h1>Listing participants for group <%= @group.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.name %></td>
        <td><%= participant.email %></td>
        <td><%= link_to 'Show', group_participant_path(@group,participant) %></td>
        <td><%= link_to 'Edit', edit_group_participant_path(@group,participant) %></td>
        <td><%= link_to 'Destroy', group_participant_path(@group,participant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


